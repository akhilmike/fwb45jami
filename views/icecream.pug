extends layout

block content
  h1= title
  br
  - var results = [{flavour: "vanilla",price: 7.8,toppings:"hot fudge"},{flavour: "strawberry",price: 10.0,toppings:"caramel"},{flavour: "chocolate",price: 8.9,toppings:"oreo"}];
   div(class = "container-fluid")
    div(class = "row")
     each i,index in results
        div(class="col-sm-4" onclick=`buy(${index})`) flavour: #{i.flavour} 
        br
        br 
        div(class="col-sm-4" onclick=`buy(${index})`) price: #{i.price}
        br
        br  
        div(class="col-sm-4" onclick=`buy(${index})`) toppings: #{i.toppings}
        script.
                function buy(itemNo){
                    alert(`You purchased item ${itemNo+1}`)
                }
   